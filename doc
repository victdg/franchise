paths:
  /branch:
    post:
      tags:
        - Sucursales
      summary: Crear una nueva sucursal
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                name:
                  type: string
                  example: "zarate 99"
                franchiseId:
                  type: string
                  format: uuid
                  example: "bb5463ba-cea6-4da4-9e39-b11d1188334b"
      responses:
        '200':
          description: Sucursal creada exitosamente
          content:
            application/json:
              schema:
                type: object
                properties:
                  data:
                    type: object
                    properties:
                      id:
                        type: string
                        format: uuid
                        example: "14be1853-b3d4-4d80-858f-facd39169bd2"
                  message:
                    type: string
                    example: "OK"
        '503':
          description: Servicio no disponible
          content:
            application/json:
              schema:
                type: object
                properties:
                  message:
                    type: string
                    example: "Service Unavailable"

